rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function authed()  { return request.auth != null; }
    function isAdmin() { return authed() && request.auth.uid == "rVrRomrCGbPqPcrPddtBTpdcLoh2"; }

    // USERS: mỗi người cập nhật hồ sơ của chính mình; admin có thể update
    match /users/{uid} {
      allow read: if authed();
      allow create: if authed() && request.auth.uid == uid;
      allow update: if authed() && (request.auth.uid == uid || isAdmin());
      allow delete: if isAdmin();
    }

    // EXPENSES: người dùng CRUD bản ghi của chính họ, admin có thể đọc tất cả và xóa khi cần
    match /expenses/{id} {
      allow create: if authed() && request.resource.data.userId == request.auth.uid;
      allow read: if authed() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      allow update: if authed() && request.auth.uid == resource.data.userId;
      allow delete: if authed() && (
        request.auth.uid == resource.data.userId || isAdmin()
      );
    }

    // HOUSE BILLS: chỉ admin tạo/sửa/xóa; ai cũng có thể đọc khi đăng nhập
    match /houseBills/{id} {
      allow read: if authed();
      allow create, update, delete: if isAdmin();
    }
  }
}
